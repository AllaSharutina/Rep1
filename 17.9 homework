l = "20 5 1 8"                          # последовательность цифр через пробел
number=[]                               # объявляем пустой массив чисел
n = int(input("Введите число: "))       # ввод произвольного числа
l1 = l
ns = l1.find(" ")                       # ищем номер попорядку первого пробела
while ns > 0:                           # если пробел найден
    num = ""                            # посимвольно вносим в переменную num значения строки до пробела
    for i in range(ns):
        num = num + l1[i]
    number.append(int(num))
    len_l1 = len(l1)                    # узнали длину строки
    l1 = l1[ns+1:len_l1]                # удалили из строки первое слева число и пробел
    ns = l1.find(" ")                   # нашли номер пробела в отредактированной строке
number.append(int(l1))                  # внесли в массив последнее число (пробелов то уже нет)
print("Входная строка:",l)
print("Получили массив",number)         # напечатали массив

number.sort()                           # отсортировали массив по возрастанию
print("Отсортировали массив",number)    # напечатали отсортированный массив

ls = len(number)                        # определили длину массива
#print("ls",ls)
while ls > 0:
    if number[ls-1] < n:                    # ведём сравнение с конца массива
        print("Искомый номер позиции",ls)   # если условие, то введённое число меньше числа в массиве на этой позции, то печатаем номер позиции
        ls = 0                              # при том же условии зануляем номер позиции, чтобы выйти из цикла
    ls = ls - 1
